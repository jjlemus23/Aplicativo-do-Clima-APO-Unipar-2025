<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/day_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segunda-feira, 23/11"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/forecast_icon_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_weather_sunny"/>

            <TextView
                android:id="@+id/temp_range_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20°C / 28°C"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/forecast_description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parcialmente Nublado"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:gravity="end"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>